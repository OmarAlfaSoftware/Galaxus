{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "GalaxusAPI": {
    "BaseUrl": "https://api.galaxus.ch",
    "Endpoints": {
      "ORDER": "https://api.galaxus.ch/order",
      "RETURN": "https://api.galaxus.ch/return"
    },
    "Retry": {
      "MaxAttempts": 3,
      "BackoffMultiplier": 2
    },
    "Validation": {
      "SchemaPath": "Schemas/",
      "EnableStrictValidation": true
    }
  }
}
